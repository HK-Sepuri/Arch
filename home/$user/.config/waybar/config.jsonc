    "height": 20, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "cpu",
        "memory",
        "disk",
        "temperature",
	"battery",
        //"hyprland/window",
        "hyprland/scratchpad",
        "custom/media"
    ],
    "modules-center": [
        "cava",
        "hyprland/workspaces"
    ],
    "modules-right": [
        "custom/keyboard-layout",
        "custom/weather-layout",
        //"idle_inhibitor",
        "pulseaudio",
        //"network",
        "backlight",
        "clock",
        "tray",
        "custom/power"
    ],
    // Modules configuration
     "hyprland/workspaces": {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "seperate-output": true,
        "format": "{icon}",
        "format-icons": {
            "1": "‡•ß",
